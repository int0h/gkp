    "version": "0.2.0",
    "configurations": [
    {
        "name": "Run e2e",
        "program": "${workspaceFolder}/tests/e2e/basic/run.js",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "pwa-node"
    },
    {
        "type": "pwa-node",
        "request": "launch",
        "name": "Launch current file",
        "program": "${file}",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch bundle",
        "program": "${workspaceFolder}/bundle.js",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/acorn-test.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true
        }
    ]
}